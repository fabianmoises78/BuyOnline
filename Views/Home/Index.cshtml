@model Producto

@using BuyOnline.Models

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100 tamaño" height="300" src="~/images/prueba2.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 tamaño" height="300" src="~/images/prueba.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 tamaño" height="300" src="~/images/FPFW_xLWQAE3wlF.png" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="text-center my-3">
    @{
        if (ViewBag.Message != null)
        {
            <p class="alert alert-warning">@ViewBag.Message.ToString()</p>
        }
    }
</div>

<div class="card-columns" id="" style="margin-top: 35px;">

    @{
        List<ShowProducts_Result> result = (List<ShowProducts_Result>)ViewBag.ListarProducto;
        foreach (var item in result)
        {
            var IdProducto = item.IdProducto;

            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@item.Imagen" alt="Imagen no encontrada...">
                <div class="card-body">
                    <h5 class="card-title">@item.Nombre</h5>
                    <p class="card-text">@item.Descripcion</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">precio: $@item.precio</li>
                    <li class="list-group-item">Existencias: @item.Exis</li>
                    <li class="list-group-item">Valoracion: @item.Valoracion</li>
                </ul>
                <div class="card-body d-flex justify-content-between">
                    @Html.ActionLink("Ver Producto", "VistaProducto", new { id = item.IdProducto, IdProducto = item.IdProducto }, new { @class = "card-link" })
                    <button onclick="AddToCar(@item.IdProducto)" class="card-link">Favoritos</button>
                    @Html.ActionLink("Favorito", "WishList", new { id = item.IdProducto, IdProducto = item.IdProducto }, new { @class = "card-link" })
                </div>
            </div>
        }
    }
</div>

@section scripts
{
    <script>
        $('.carousel').carousel()
    </script>
    <script src="~/Content/js/Car.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.20/dist/sweetalert2.all.min.js"></script>
    <script src="~/Content/js/Routes.js"></script>
}